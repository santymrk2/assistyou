---
import {db, School} from 'astro:db'
const schools = await db.select().from(School).all()

export const prerender = true;
---

<div class="flex flex-col items-center">
    <h1 class="text-center text-2xl font-black m-6 text-white">Schools</h1>
    <div class="flex flex-col sm:flex-row gap-2">
        {
            schools.map(({id, name}) => (
                <div class="bg-orange-600 rounded-xl flex flex-col items-center">
                    <a href={`/schools/${id}`} class="text-white text-lg font-medium text-center px-6 py-4">{name}</a>
                </div>
            ))
        }
    </div>

</div>
